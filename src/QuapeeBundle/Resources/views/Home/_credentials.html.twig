<div class="panel panel-default">
    <div class="panel-heading">
        <span class="label label-default">Credentials</span>
    </div>
    {% if credentials %}
        <table class="table">
            <thead>
            <tr>
                <th>
                    <small class="text-muted">TITLE</small>
                </th>
                <th>&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            {% for credential in credentials %}
                <tr>
                    <td>
                        <span class="label label-default"
                              title="{{ credential.description }}">{{ credential.title }}</span>
                    </td>
                    <td class="text-right">
                        <a href="{{ url('credential_update', {id: credential.id}) }}"
                           class="btn btn-link btn-xs" title="Edit Credential">
                            <i class="glyphicon glyphicon-edit"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="panel-body">
            <p class="text-warning">There are no configured credentials.</p>
        </div>
    {% endif %}
</div>
