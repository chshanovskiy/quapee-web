<div class="panel panel-default">
    <div class="panel-heading">
        <span class="text-muted">
            <b>Apps</b>
        </span>
        <div class="btn-group pull-right" role="group">
            <a href="{{ url('frontend_create') }}" class="btn btn-default btn-xs">Create</a>
        </div>
    </div>
    {% if frontends %}
        <table class="table">
            <thead>
            <tr>
                <th>
                    <small class="text-muted">TITLE</small>
                </th>
                <th>&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            {% for frontend in frontends %}
                <tr>
                    <td>
                        <span class="label label-success"
                              title="{{ frontend.description }}">{{ frontend.title }}</span>
                    </td>
                    <td class="text-right">
                        <a href="{{ url('frontend_update', {id: frontend.id}) }}"
                           class="btn btn-link btn-xs" title="Edit Credential">
                            <i class="glyphicon glyphicon-edit"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="panel-body">
            <p class="text-warning">There are no configured apps.</p>
        </div>
    {% endif %}
</div>
