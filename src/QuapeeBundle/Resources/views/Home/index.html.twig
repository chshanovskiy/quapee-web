{% extends 'QuapeeBundle::base.html.twig' %}

{% block body %}
    <div class="container">
        <h3>Quapee</h3>
        <hr>
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="btn-toolbar">
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-primary btn-sm">New Alias</button>
                    </div>
                    <div class="btn-group pull-right" role="group">
                        <button type="button" class="btn btn-default btn-sm">New App</button>
                        <button type="button" class="btn btn-default btn-sm">New Service</button>
                        <a href="{{ url('credential_create') }}" class="btn btn-default btn-sm">New Credentials</a>
                    </div>
                </div>
            </div>
            <table class="table">
                <thead>
                <tr>
                    <th>
                        <small class="text-muted">TITLE</small>
                    </th>
                    <th>
                        <small class="text-muted">APP</small>
                    </th>
                    <th>
                        <small class="text-muted">SERVICES</small>
                    </th>
                    <th>
                        <small class="text-muted">URL</small>
                    </th>
                    <th>
                        <small class="text-muted">CREDENTIALS</small>
                    </th>
                    <th class="text-right">
                        <small class="text-muted">CREATED BY</small>
                    </th>
                    <th>&nbsp;</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>
                        <span class="label label-primary">dev_ppb2c</span>
                    </td>
                    <td>
                        <span class="label label-success">ppb2c</span>
                    </td>
                    <td>
                        <span class="label label-danger">ArmPlatform</span>
                    </td>
                    <td>
                        <span class="label label-default">vm.dev.ris.itmh.local</span>
                    </td>
                    <td>
                        <span class="label label-default">service_api</span>
                    </td>
                    <td class="text-right"></td>
                    <th class="text-right">
                        <div class="dropdown">
                            <button class="btn btn-default btn-xs dropdown-toggle"
                                    data-toggle="dropdown">
                                <i class="glyphicon glyphicon-option-vertical"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li><a href="#">Edit</a></li>
                                <li><a href="#">Duplicate</a></li>
                            </ul>
                        </div>
                    </th>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col-sm-4">
            </div>
            <div class="col-sm-4">
            </div>
            <div class="col-sm-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <span class="label label-default">Credentials</span>
                    </div>
                    {% if credentials %}
                        <table class="table">
                            <thead>
                            <tr>
                                <th>
                                    <small class="text-muted">TITLE</small>
                                </th>
                                <th>&nbsp;</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for credential in credentials %}
                                <tr>
                                    <td>
                                        <span class="label label-default"
                                              title="{{ credential.description }}"
                                        >{{ credential.title }}</span>
                                    </td>
                                    <td class="text-right">
                                        <a href="{{ url('credential_update', {id: credential.id}) }}"
                                           class="btn btn-link btn-xs" title="Edit Credential">
                                            <i class="glyphicon glyphicon-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="panel-body">
                            <p class="text-warning">There are no configured credentials.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
