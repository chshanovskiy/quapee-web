<div class="panel panel-default">
    <div class="panel-heading">
        <span class="text-muted">
            <b>Services</b>
        </span>
        <div class="btn-group pull-right" role="group">
            <a href="{{ url('service_create') }}" class="btn btn-default btn-xs">Create</a>
        </div>
    </div>
    {% if services %}
        <table class="table">
            <thead>
            <tr>
                <th>
                    <small class="text-muted">TITLE</small>
                </th>
                <th>&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            {% for service in services %}
                <tr>
                    <td>
                        <span class="label label-danger"
                              title="{{ service.description }}">{{ service.title }}</span>
                    </td>
                    <td class="text-right">
                        <a href="{{ url('service_update', {id: service.id}) }}"
                           class="btn btn-link btn-xs" title="Edit Credential">
                            <i class="glyphicon glyphicon-edit"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="panel-body">
            <p class="text-warning">There are no configured services.</p>
        </div>
    {% endif %}
</div>
